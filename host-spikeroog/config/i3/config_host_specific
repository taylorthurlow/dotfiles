
# BEGIN HOST SPECIFIC CONFIGURATION - spikeroog
# ~/.dotfiles/host-spikeroog/config/i3/config_host_specific

bindsym XF86MonBrightnessUp exec xbacklight +5
bindsym XF86MonBrightnessDown exec xbacklight -5
bindsym XF86AudioMute exec /home/taylor/.dotfiles/host-spikeroog/config/i3/toggle_mute.sh
bindsym XF86AudioRaiseVolume exec /home/taylor/.dotfiles/host-spikeroog/config/i3/change_volume.sh up
bindsym XF86AudioLowerVolume exec /home/taylor/.dotfiles/host-spikeroog/config/i3/change_volume.sh down

exec --no-startup-id nmapplet
